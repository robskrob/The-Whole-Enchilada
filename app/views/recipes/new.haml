%main.recipes
  %h1 new
  = form_with(url: "/recipes", method: "post") do
    = label_tag(:title, "Title")
    = text_field_tag(:title)
    = label_tag(:description, "Description")
    = text_area_tag(:description, '')
    = label_tag(:date_published, "Date Published")
    = date_field_tag(:date_published)
    = submit_tag("Update")
