{
  "manifest_version": 2,
  "icons": {
    "16": "cooking-icon.png",
    "128": "cooking-icon.png"
  },
  "name": "Recipe Saver",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://d81e7962.ngrok.io; object-src 'self'",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-3.5.0.min.js", "content.js"]
    }
  ]
}
