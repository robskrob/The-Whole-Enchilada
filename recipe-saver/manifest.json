{
  "manifest_version": 3,
  "icons": {
    "16": "cooking-icon.png",
    "128": "cooking-icon.png"
  },
  "name": "Recipe Saver",
  "description": "Save recipes in the cloud", 
  "version": "0.1.0",
  "action": {
    "default_title": "Recipe Saver",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
